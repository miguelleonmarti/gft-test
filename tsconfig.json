{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
    },
    "plugins": [
        {
            "name": "typescript-plugin-css-modules",
        },
        {
            "name": "react-refresh/babel",
        }
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
}